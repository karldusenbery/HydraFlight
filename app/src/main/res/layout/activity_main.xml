<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <ImageView
        android:id="@+id/ivWater"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/water_glass"
        android:layout_margin="15dp"/>


    <Button
        android:id="@+id/btnPlusWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="45dp"
        android:text="+"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:layout_below="@id/ivWater"/>

    <TextView
        android:id="@+id/tvElapsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: "
        android:textSize="32dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="160dp"/>

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4169E1"
        android:textSize="32dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="260dp"/>

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_below="@id/tvElapsed"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="160dp" />

    <Button
        android:id="@+id/pause_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:layout_toRightOf="@id/start_button"
        android:layout_below="@id/tvElapsed"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_toRightOf="@id/pause_button"
        android:layout_below="@id/tvElapsed"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>


    <TextView
        android:id="@+id/tvDrank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drank: "
        android:textSize="22dp"
        android:layout_below="@id/start_button"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="160dp"/>

    <TextView
        android:id="@+id/tvDrinkNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drink now: "
        android:textSize="22dp"
        android:layout_below="@id/tvDrank"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="160dp"/>


    <ImageView
        android:id="@+id/ivCoffee"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/coffee"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="15dp"/>

    <Button
        android:id="@+id/btnPlusCoffee"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="+"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:layout_below="@id/ivCoffee"/>

    <TextView
        android:id="@+id/tvCoffeesDrank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="36sp"
        android:layout_below="@id/ivCoffee"
        android:layout_toRightOf="@id/btnPlusCoffee"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>


</RelativeLayout>

